{
  "name": "tag-attack",
  "version": "1.0.0",
  "main": "main.js",
  "author": {
    "name": "Cahil Foley",
    "email": "cahilfoley2@gmail.com",
    "url": "https://github.com/cahilfoley"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ts": "tsc",
    "build:electron": "electron-builder",
    "build": "npm run build:ts && npm run build:electron",
    "electron": "electron .",
    "start": "run-p start-compile start-run",
    "start-compile": "tsc --watch",
    "start-run": "browser-sync start --server -w"
  },
  "devDependencies": {
    "@types/p5": "^0.9.0",
    "browser-sync": "^2.26.7",
    "electron": "^9.3.1",
    "electron-builder": "^22.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3"
  },
  "build": {
    "appId": "tag.attack",
    "productName": "Matt's Tag Attacj",
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "Matt's Tag Attack.exe"
    },
    "directories": {
      "output": "dist/output",
      "app": ".",
      "buildResources": "."
    },
    "files": [
      "!node_modules/**/*",
      "images/*",
      "sounds/*",
      "fonts/*",
      "build/*",
      "index.html",
      "main.js",
      "icon.ico",
      "styles.css"
    ]
  }
}
